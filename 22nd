# Create three arrays
arr1 <- array(c(1, 2, 3, 4, 5, 6), dim = c(2, 3))
arr2 <- array(c(7, 8, 9, 10, 11, 12), dim = c(2, 3))
arr3 <- array(c(13, 14, 15, 16, 17, 18), dim = c(2, 3))

# Combine the first rows of the three arrays
combined_rows <- c(arr1[1, ], arr2[1, ], arr3[1, ])

print(combined_rows)
